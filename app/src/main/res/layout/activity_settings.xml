<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.SettingsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Moodle Url"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tl_moodle_url"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="@string/moodle_url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:startIconDrawable="@drawable/ic_baseline_link_24"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_moodle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textUri"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/moodleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/moodle_btn"
        android:background="@drawable/button_background"
        android:letterSpacing="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_moodle_url"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>